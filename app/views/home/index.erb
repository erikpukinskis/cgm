<% if @member %>
  <h1>Levels</h1>
  <%= render "dashboards/glucose_metrics", metrics: @member_data.glucose_metrics %>

  <p>Total measurements: <%= @member.measurements.count %></p>

  <ul>
    <% @member.measurements.limit(100).each do |measurement| %>
      <li><%= measurement.tested_at %>: <%= measurement.value %></li>
    <% end %>
  </ul>

<% else %>
  <h1>Welcome to GCM</h1>

  <p>Need some help with you blood glucose meter or continuous glucose monitor? Look no further!</p>

  <div class="actions"><a class="button" href="/auth/join">Join</a></div>
<% end %>

